<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %><br>
      <% unless @user == current_user %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-sm btn-info" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-sm btn-success" %>
        <% end %>
      <% end %>
        <% if current_user.following?(@user) %>
          <%= link_to 'chatを始める', chat_path(@user) %>
        <% end %>
      
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <div class = "table_width">
        <h3>投稿数の前日比・前週比</h3>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>今日の投稿数</th>
              <th>前日の投稿数</th>
              <th>前日比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
     　        <td><%= @today_book.count %></td>
     　        <td><%= @yesterday_book.count %></td>
     　        <td>
               <% if @yesterday_book.count == 0 %>
                0
               <% else %>
       　        <% @the_day_before =   @today_book.count / @yesterday_book.count.to_f  %>
       　        <%= (@the_day_before * 100).round %>%
               <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        
        <div class = "table_width">
        <table class="table table-bordered">  
          <thead>
            <tr>
              <th>今週の投稿</th>
              <th>先週の投稿</th>
              <th>前週比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @this_week_book.count %></td>
              <td><%= @last_week_book.count %></td>
              <td>
                <% if @last_week_book.count == 0 %>
                  ０
                <% else %>
                  <% @the_week_before =   @this_week_book.count / @last_week_book.count.to_f  %>
                  <%= (@the_week_before * 100).round %>%
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        </div>
        
        <div class = "table_width">
          <h3>７日間分の投稿数</h3>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>6日前</th>
                <th>5日前</th>
                <th>4日前</th>
                <th>3日前</th>
                <th>2日前</th>
                <th>1日前</th>
                <th>今日</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @sixday_ago_book.count %></td>
                <td><%= @fiveday_ago_book.count %></td>
                <td><%= @fourday_ago_book.count %></td>
                <td><%= @threeday_ago_book.count %></td>
                <td><%= @twoday_ago_book.count %></td>
                <td><%= @yesterday_book.count %></td>
                <td><%= @today_book.count %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
