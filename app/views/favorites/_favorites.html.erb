
    <% if book.favorited_by?(current_user) %>
        <p>
            <%= link_to book_favorites_path(book), method: :delete, style: "color:red;", remote: true do %>
              <span>♥<%= book.favorites.count %></span>
            <% end %>
        </p>
        <% else %>
        <p>
            <%= link_to book_favorites_path(book), method: :post, remote: true do %>
                <span>♡<%= book.favorites.count %></span>
            <% end %>
        </p>
    <% end %>
