<% if @range == 'User' %>
    <h3>User search for "<%= @word %>"</h3>
    <table class='table table-hover table-inverse'>
    <thead>
        <tr>
            <td></td>
            <td>name</td>
        </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
 <% elsif @range == 'Book' %>
    <h3>Books search for "<%= @word %>"</h3>
    <table class='table table-hover table-inverse'>
<thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
<% end %>